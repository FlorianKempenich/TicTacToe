<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.shockn745.presentation.TicTacView
            android:id="@+id/main_tictac_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorAccent"/>

    <TextView
            android:id="@+id/main_current_player_textview"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:layout_gravity="center"
            tools:text="Player 1"/>

    <TextView
            android:id="@+id/main_winner_textview"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:layout_gravity="center"
            tools:text="Winner : Player 1"
            android:visibility="gone"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_reset_game_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Reset game"/>
</LinearLayout>
